\ProvidesPackage{beamerthemeHubner}

\mode<presentation>

\definecolor{ETH1}{RGB}{26,36,46}
\definecolor{ETH3}{RGB}{38,54,70}
\definecolor{ETH6}{RGB}{111,111,110}
\definecolor{ETH8}{RGB}{0,122,146}
\definecolor{ETH10}{RGB}{38,54,70}
\definecolor{ETH11}{RGB}{164,39,71}
\definecolor{tlg}{RGB}{255,255,255}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%It seems many of the following entries do not control any visible Behaviour. All such entries are
%set to red, so that they are easy to spot if they ever become visible

\setbeamercolor{headline}{fg=red,bg=ETH3} % This is the recommended color for Specialist community usage: change to ETH1 for general communication
\setbeamercolor{footline}{fg=red, bg=red}
\setbeamerfont{footline}{size=\large,series=\bf}
\setbeamercolor{separation line}{bg=ETH3}
\setbeamercolor{title in headline}{fg=white}
\setbeamerfont{title}{size=\large, series=\bf}
\setbeamercolor{author in headline}{fg=white}
\setbeamerfont{author in headline}{size=\normalsize}
\setbeamercolor{institute in headline}{fg=white}
\setbeamerfont{institute in headline}{size=\normalsize}

\setbeamercolor{framesubtitle}{fg=red, bg=ta2gray}
\setbeamercolor{author in head/foot}{fg=white, bg=ETH3}
\setbeamercolor{title in head/foot}{fg=red, bg=red}

\setbeamercolor*{normal text}{fg=ETH6, bg=tlg}
\setbeamercolor*{block body}{fg=black, bg=white}
\setbeamercolor*{block title}{fg=white,bg=ETH10}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=red}

\setbeamercolor*{example body}{fg=red,bg=red}
\setbeamercolor*{example text}{fg=red,bg=red}
\setbeamercolor*{example title}{bg=red,fg=red}

\setbeamercolor{alerted text}{fg=red}
\setbeamercolor{structure}{fg=ETH1}

\setbeamertemplate{itemize item}{\color{ETH11} \footnotesize \raisebox{0.16em}{$ \blacksquare$} }
\setbeamertemplate{itemize subitem}{\color{ETH11} \scriptsize \raisebox{0.08em}{ $ \blacksquare $} }
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% !!! This environment can't both have nice margins AND display the contained text as justified:
% We preferentially use the above but keep this one just-in-case
\setbeamertemplate{block begin}{
  \vskip2ex
  \begin{beamercolorbox}[ht=2.4ex,dp=1.2ex, wd=\textwidth, center,rounded=true,shadow=false,leftskip=1cm,colsep*=0ex]{block title}%
    \usebeamerfont*{block title}\centering \insertblocktitle
  \end{beamercolorbox}\vspace{1ex}
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5ex}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,shadow=false,center,wd=\textwidth,]{block body}%
    \ifbeamercolorempty[bg]{block body}\vbox{}%
  \begin{minipage}{0.96\textwidth}\vbox{}%
  \justify}
  \setbeamertemplate{block end}{
  \end{minipage}
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.05\paperwidth}
      \end{column}
      \begin{column}{.8\paperwidth}
        \vskip6ex
        \raggedleft
        \usebeamercolor[fg]{title in headline}\usebeamerfont{title}\inserttitle\\[0.5ex]
        \usebeamercolor[fg]{author in headline}\usebeamerfont{author in headline}\insertauthor 
        \usebeamercolor[fg]{institute in headline}\usebeamerfont{institute in headline} -- \insertinstitute\\[0.5ex]
        \vskip3ex
      \end{column}
      \begin{column}{.05\paperwidth}
        \vskip1cm
        %\begin{center}
        %  \includegraphics[width=.6\textwidth]{img/zh_logo}
        %\end{center}
        \vskip-1.5cm
      \end{column}
      \begin{column}{.03\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
  \vskip-2cm
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
    \rule{0pt}{2pt}
  \end{beamercolorbox}

  \leavevmode%
  \begin{beamercolorbox}[ht=4ex,leftskip=1cm,rightskip=1cm]{author in head/foot}%
    \href{http://www.hubner.info}{www.hubner.info}
    \hfill
    \insertdate
    \hfill
    \href{mailto:stefan@hubner.info}{stefan@hubner.info}
    \vskip1ex
  \end{beamercolorbox}
  \vskip0pt%
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line foot}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

